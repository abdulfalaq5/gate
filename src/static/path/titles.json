{
	"/titles": {
		"get": {
			"tags": ["Titles"],
			"security": [
			{
				"bearerAuth": []
			}
		],
			"description": "Retrieve a paginated list of titles with optional filtering",
			"parameters": [
				{
					"name": "page",
					"in": "query",
					"description": "Page number for pagination",
					"required": false,
					"schema": {
						"type": "integer",
						"default": 1
					}
				},
				{
					"name": "limit",
					"in": "query",
					"description": "Number of items per page",
					"required": false,
					"schema": {
						"type": "integer",
						"default": 10
					}
				},
				{
					"name": "search",
					"in": "query",
					"description": "Search term for title name",
					"required": false,
					"schema": {
						"type": "string"
					}
				},
				{
					"name": "department_id",
					"in": "query",
					"description": "Filter by department ID",
					"required": false,
					"schema": {
						"type": "string",
						"format": "uuid"
					}
				},
				{
					"name": "is_delete",
					"in": "query",
					"description": "Filter by deletion status",
					"required": false,
					"schema": {
						"type": "boolean",
						"default": false
					}
				}
			],
			"responses": {
				"200": {
					"description": "Titles retrieved successfully",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaResponseTitlesList"
							}
						}
					}
				},
				"500": {
					"description": "Internal server error"
				}
			}
		},
		"post": {
			"tags": ["Titles"],
			"security": [
			{
				"bearerAuth": []
			}
		],
			"description": "Create a new title with the provided information",
			"requestBody": {
				"required": true,
				"content": {
					"application/json": {
						"schema": {
							"$ref": "#/components/schemas/SchemaPostTitles"
						}
					}
				}
			},
			"responses": {
				"201": {
					"description": "Title created successfully",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaResponseTitles"
							}
						}
					}
				},
				"400": {
					"description": "Bad request - validation error"
				},
				"500": {
					"description": "Internal server error"
				}
			}
		}
	},
	"/titles/{id}": {
		"get": {
			"tags": ["Titles"],
			"security": [
			{
				"bearerAuth": []
			}
		],
			"description": "Retrieve a specific title by its ID",
			"parameters": [
				{
					"name": "id",
					"in": "path",
					"required": true,
					"description": "Title ID",
					"schema": {
						"type": "string",
						"format": "uuid"
					}
				}
			],
			"responses": {
				"200": {
					"description": "Title retrieved successfully",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaResponseTitles"
							}
						}
					}
				},
				"404": {
					"description": "Title not found"
				},
				"500": {
					"description": "Internal server error"
				}
			}
		},
		"put": {
			"tags": ["Titles"],
			"security": [
			{
				"bearerAuth": []
			}
		],
			"description": "Update an existing title",
			"parameters": [
				{
					"name": "id",
					"in": "path",
					"required": true,
					"description": "Title ID",
					"schema": {
						"type": "string",
						"format": "uuid"
					}
				}
			],
			"requestBody": {
				"required": true,
				"content": {
					"application/json": {
						"schema": {
							"$ref": "#/components/schemas/SchemaPutTitles"
						}
					}
				}
			},
			"responses": {
				"200": {
					"description": "Title updated successfully",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaResponseTitles"
							}
						}
					}
				},
				"400": {
					"description": "Bad request - validation error"
				},
				"404": {
					"description": "Title not found"
				},
				"500": {
					"description": "Internal server error"
				}
			}
		},
		"delete": {
			"tags": ["Titles"],
			"security": [
			{
				"bearerAuth": []
			}
		],
			"description": "Soft delete a title",
			"parameters": [
				{
					"name": "id",
					"in": "path",
					"required": true,
					"description": "Title ID",
					"schema": {
						"type": "string",
						"format": "uuid"
					}
				}
			],
			"responses": {
				"200": {
					"description": "Title deleted successfully"
				},
				"404": {
					"description": "Title not found"
				},
				"500": {
					"description": "Internal server error"
				}
			}
		}
	},
	"/titles/department/{departmentId}": {
		"get": {
			"tags": ["Titles"],
			"security": [
			{
				"bearerAuth": []
			}
		],
			"description": "Retrieve all titles belonging to a specific department",
			"parameters": [
				{
					"name": "departmentId",
					"in": "path",
					"required": true,
					"description": "Department ID",
					"schema": {
						"type": "string",
						"format": "uuid"
					}
				}
			],
			"responses": {
				"200": {
					"description": "Titles retrieved successfully",
					"content": {
						"application/json": {
							"schema": {
								"type": "array",
								"items": {
									"$ref": "#/components/schemas/SchemaResponseTitles"
								}
							}
						}
					}
				},
				"500": {
					"description": "Internal server error"
				}
			}
		}
	}
}
