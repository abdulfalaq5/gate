{
  "Product": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid",
        "example": "123e4567-e89b-12d3-a456-426614174000"
      },
      "name": {
        "type": "string",
        "example": "iPhone 14 Pro"
      },
      "description": {
        "type": "string",
        "example": "Latest iPhone with advanced camera system"
      },
      "price": {
        "type": "number",
        "format": "decimal",
        "example": 999.99
      },
      "stock": {
        "type": "integer",
        "example": 50
      },
      "sku": {
        "type": "string",
        "example": "IPH14P-256-BLK"
      },
      "category": {
        "type": "string",
        "example": "Electronics"
      },
      "brand": {
        "type": "string",
        "example": "Apple"
      },
      "images": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "example": ["https://example.com/image1.jpg", "https://example.com/image2.jpg"]
      },
      "specifications": {
        "type": "object",
        "example": {
          "color": "Space Black",
          "storage": "256GB",
          "screen_size": "6.1 inches"
        }
      },
      "is_active": {
        "type": "boolean",
        "example": true
      },
      "created_at": {
        "type": "string",
        "format": "date-time",
        "example": "2023-01-01T00:00:00Z"
      },
      "updated_at": {
        "type": "string",
        "format": "date-time",
        "example": "2023-01-01T00:00:00Z"
      }
    }
  },
  "CreateProductRequest": {
    "type": "object",
    "required": ["name", "price"],
    "properties": {
      "name": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100,
        "example": "iPhone 14 Pro"
      },
      "description": {
        "type": "string",
        "maxLength": 500,
        "example": "Latest iPhone with advanced camera system"
      },
      "price": {
        "type": "number",
        "format": "decimal",
        "minimum": 0,
        "example": 999.99
      },
      "stock": {
        "type": "integer",
        "minimum": 0,
        "example": 50
      },
      "sku": {
        "type": "string",
        "minLength": 3,
        "maxLength": 50,
        "example": "IPH14P-256-BLK"
      },
      "category": {
        "type": "string",
        "maxLength": 50,
        "example": "Electronics"
      },
      "brand": {
        "type": "string",
        "maxLength": 50,
        "example": "Apple"
      },
      "images": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "example": []
      },
      "specifications": {
        "type": "object",
        "example": {}
      },
      "is_active": {
        "type": "boolean",
        "example": true
      }
    }
  },
  "UpdateProductRequest": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100,
        "example": "iPhone 14 Pro"
      },
      "description": {
        "type": "string",
        "maxLength": 500,
        "example": "Latest iPhone with advanced camera system"
      },
      "price": {
        "type": "number",
        "format": "decimal",
        "minimum": 0,
        "example": 999.99
      },
      "stock": {
        "type": "integer",
        "minimum": 0,
        "example": 50
      },
      "sku": {
        "type": "string",
        "minLength": 3,
        "maxLength": 50,
        "example": "IPH14P-256-BLK"
      },
      "category": {
        "type": "string",
        "maxLength": 50,
        "example": "Electronics"
      },
      "brand": {
        "type": "string",
        "maxLength": 50,
        "example": "Apple"
      },
      "images": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "example": []
      },
      "specifications": {
        "type": "object",
        "example": {}
      },
      "is_active": {
        "type": "boolean",
        "example": true
      }
    }
  },
  "ProductResponse": {
    "type": "object",
    "properties": {
      "status": {
        "type": "boolean",
        "example": true
      },
      "message": {
        "type": "string",
        "example": "Success"
      },
      "data": {
        "$ref": "#/components/schemas/Product"
      }
    }
  },
  "ProductListResponse": {
    "type": "object",
    "properties": {
      "status": {
        "type": "boolean",
        "example": true
      },
      "message": {
        "type": "string",
        "example": "Data retrieved successfully"
      },
      "data": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Product"
            }
          },
          "pagination": {
            "type": "object",
            "properties": {
              "page": {
                "type": "integer",
                "example": 1
              },
              "limit": {
                "type": "integer",
                "example": 10
              },
              "total": {
                "type": "integer",
                "example": 100
              },
              "total_pages": {
                "type": "integer",
                "example": 10
              }
            }
          }
        }
      }
    }
  },
  "ProductStatistics": {
    "type": "object",
    "properties": {
      "total_products": {
        "type": "integer",
        "example": 100
      },
      "total_value": {
        "type": "number",
        "example": 50000.00
      },
      "total_stock": {
        "type": "integer",
        "example": 1000
      },
      "average_price": {
        "type": "number",
        "example": 500.00
      },
      "categories": {
        "type": "object",
        "additionalProperties": {
          "type": "integer"
        },
        "example": {
          "Electronics": 50,
          "Clothing": 30,
          "Books": 20
        }
      },
      "brands": {
        "type": "object",
        "additionalProperties": {
          "type": "integer"
        },
        "example": {
          "Apple": 25,
          "Samsung": 20,
          "Nike": 15
        }
      },
      "low_stock": {
        "type": "integer",
        "example": 5
      },
      "out_of_stock": {
        "type": "integer",
        "example": 2
      }
    }
  }
}
